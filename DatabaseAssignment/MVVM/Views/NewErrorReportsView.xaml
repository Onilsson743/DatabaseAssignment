<UserControl x:Class="DatabaseAssignment.MVVM.Views.NewErrorReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseAssignment.MVVM.Views" 
             xmlns:models="clr-namespace:DatabaseAssignment.MVVM.Models"
             xmlns:viewmodels="clr-namespace:DatabaseAssignment.MVVM.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:NewErrorReportsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <ListView Foreground="White" 
                      BorderBrush="Transparent"  
                      Grid.Column="0" 
                      Background="Transparent" 
                      ItemsSource="{Binding Persons}" 
                      SelectionMode="Single" 
                      SelectedItem="{Binding name}"
                      HorizontalContentAlignment="Stretch"
                      x:Name="Contacts_ListView"
                      >
            <ListView.ItemTemplate >
                <DataTemplate DataType="{x:Type models:Person}">
                    <Border CornerRadius="5" Background="#100E27">
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Left" >
                                <TextBlock Text="{Binding FirstName}" Padding="5 5 0 0" />
                                <TextBlock Text="{Binding LastName}" Padding="5 0 0 5" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
